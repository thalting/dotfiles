#!/bin/sh

PC=$(playerctl metadata > /dev/null 2>&1)

if [ $? -eq 1 ]; then
    printf "♬ No playback"
else
    ARTIST=$(playerctl metadata artist)
    TRACK=$(playerctl metadata title)

    if [ "$ARTIST" = "" ]; then
        printf "♫ %s" "$TRACK"
    elif [ "$TRACK" = "" ]; then
        printf "♫ %s" "$ARTIST"
    else
        printf "♫ %s - %s" "$ARTIST" "$TRACK"
    fi
fi
