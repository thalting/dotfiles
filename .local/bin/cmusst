#!/bin/sh

if ps -C cmus > /dev/null; then
    CMUSDATA=$(cmus-remote -Q)
    ARTIST=$(echo "$CMUSDATA" | grep -w '^tag artist' | awk '{gsub("tag artist ", "");print}')
    TRACK=$(echo "$CMUSDATA" | grep -w '^tag title' | awk '{gsub("tag title ", "");print}')

    if [ "$ARTIST" = "" ]; then
        printf "♬ No playback"
    else
        printf "♫ %s - %s" "$ARTIST" "$TRACK"
    fi
else
    printf "♬ No playback"
fi
