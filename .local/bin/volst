#!/bin/sh

VOL=$(pamixer --get-volume)
STATE=$(pamixer --get-mute)

if [ "$STATE" = "true" ] || [ "$VOL" -eq 0 ]; then
    printf "婢"
elif [ "$VOL" -gt 0 ] && [ "$VOL" -le 33 ]; then
    printf "%s%%" "$VOL"
elif [ "$VOL" -gt 33 ] && [ "$VOL" -le 66 ]; then
    printf " %s%%" "$VOL"
else
    printf " %s%%" "$VOL"
fi
