#!/bin/sh

setxkbmap br
setxkbmap -option caps:escape

xrdb "$HOME/.Xresources"

xwallpaper --zoom "$HOME/pictures/wallpapers/Nanachi.png"

xset s off -dpms

xmodmap -e "pointer = 3 2 1"

xbanish &

sxhkd &

picom &

urxvtd -q -f -o

pgrep -x -t "$(tty)" notdaemon >> /dev/null || notdaemon &
pgrep -x -t "$(tty)" dwmblocks >> /dev/null || dwmblocks &

redshift &

dwm
