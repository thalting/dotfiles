#!/bin/sh

setxkbmap br
setxkbmap -option caps:ctrl_modifier

xrdb "$HOME/.Xresources"

xwallpaper --zoom "$HOME/pictures/wallpapers/Witch.jpg"

xset s off -dpms

xmodmap -e "pointer = 3 2 1"

exec xbanish -m nw 0 &

exec sxhkd &

exec picom &

exec urxvtd -q -f -o &

pgrep -x -t "$(tty)" notdaemon >> /dev/null || exec notdaemon &
pgrep -x -t "$(tty)" dwmblocks >> /dev/null || exec dwmblocks &

exec redshift &

while true; do
    dwm >/dev/null 2>&1
done
